<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="new_guest" model="mail.template">
            <field name="name">New Guest</field>
            <field name="model_id" ref="model_fo_visit"></field>
            <field name="email_from"><![CDATA[${object.company_id.name} <${object.company_id.email}>]]></field>
            <field name="email_to">${object.visiting_person.work_email|safe}</field>
            <field name="subject">No-Reply: Apointment Created With <![CDATA[${object.visitor.name}]]></field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html"><![CDATA[
                <div style="background:#F3F5F6;color:#515166;padding:25px 0px;font-family:Arial,Helvetica,sans-serif;font-size:14px;">
                    <table style="width:600px;margin:5px auto;">
                        <tbody>
                            <tr>
                                <td>
                                    <a href="/">
                                        <img src="http://triaplc.com/assets/images/tria-logo.png" " style="width: 130px;height: 80px;" alt="${object.company_id.name}" style="vertical-align:baseline;max-width:100px;" />
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div style="width:600px;margin:0px auto;background:white;border:2px solid #e1e1e1;padding-top:20px;padding-left:30px;padding-right:30px">
                        <p style="font-size:16px;">
                            Hi <b>${object.visiting_person.name}</b>,
                        </p>
                        <br/> </br>
                        <body>
                            <p>
                                I am writing this to let you know an appointment is created with <b>${object.visitor.name}</b> on 
                                ${object.check_in_date} at your office. When your visitor arrive in scheduled date we will let you know through
                                email and notification. If you would like to contact your visitor directly through his email  <a href="mailto:${object.visitor.email}">${object.visitor.email}</a>
                                 or using his phone number <a href="tel:${object.visitor.phone}">${object.visitor.phone}</a>
                            </p>
                            <br/>
                            <b>Regards, ${object.company_id.name}</b>
                            <br/>
                        </body>
                    </div>
                    <table style="width:600px;margin:0px auto;text-align:center;">
                        <tbody>
                            <tr>
                                <td style="padding-top:10px;font-size: 12px;">
                                    <div>Sent by ${object.company_id.name}</div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            ]]>
            </field>
        </record>

    </data>
</odoo>
